{% extends "ApplicationBlogBundle::layout.html.twig" %}
	 
	{% block title %}
	    symfony2 Blog | Accueil
	{% endblock %}
	 
	{% block content %}
	 <a href="new">Nouveau Post</a>
	    {% for post in posts %}
	<div class="post">
	<h2>
	                <a href="">{{ post.title }}</a>
	            </h2>
	<p class="post-info">Posté par {{ post.user.username }} | Categorie : <a href=""> {{ post.category.name }}</a>
	</p><p class="post_body">
	                {{ post.content }}
	             
	</p><ul class="post_tags">
	                {% if post.tags|length %}
	                    {% for tag in post.tags %}
	<li>{{ tag.name }}</li>
	 
	                    {% endfor %}
	                {% endif %}
	            </ul>
	<p class="postmeta">
	                <a href="{{post.id}}/show" class="readmore">Lire la suite</a> |
	                <a href="comment/{{ post.id }}" class="comments">Commentaire{{  post.comments|length > 1 ? 's' : '' }} ({{ post.comments|length }})</a> |
	                <span class="date">{{ post.createdAt | date('l d M Y') }}</span>
	             
	</p></div>
	 <a href="{{ post.id }}/edit">&nbsp;&nbsp;&eacute;diter</a>
	 
	    {% endfor %}
	{% endblock %}